<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your combo"
            android:textSize="20sp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flavors"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <ImageButton
                android:id="@+id/flavorVanilla"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/vanilla"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="Vanilla" />

            <ImageButton
                android:id="@+id/flavorChocolate"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chocolate"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="Chocolate" />

            <ImageButton
                android:id="@+id/flavorStrawberry"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/strawberry"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="Strawberry" />

            <ImageButton
                android:id="@+id/flavorMango"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mango"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="Mango" />

            <ImageButton
                android:id="@+id/flavorMint"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mint"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="Mint" />

            <ImageButton
                android:id="@+id/flavorCoffee"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/cookiesncream"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"/>
        </GridLayout>

        <!-- Toppings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toppings"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <ImageButton
                android:id="@+id/toppingSprinkles"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sprinkles"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="Sprinkles" />

            <ImageButton
                android:id="@+id/toppingChocoChips"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chocochips"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="Choco Chips" />

            <ImageButton
                android:id="@+id/toppingNuts"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/nuts"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:contentDescription="Nuts" />
        </GridLayout>

        <!-- Randomize Combo Button -->
        <Button
            android:id="@+id/randomizeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Randomize Combo"
            android:layout_marginTop="20dp" />

        <!-- Show Combo Button -->
        <Button
            android:id="@+id/showComboButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Combo"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</ScrollView>
